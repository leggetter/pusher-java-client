	          <execution>
	            <id>add-source</id>
	            <phase>generate-sources</phase>
	            <goals>
	              <goal>add-source</goal>
	            </goals>
	            <configuration>
	              <sources>
	                <source>Java-WebSocket/src/main/java</source>
	              </sources>
	            </configuration>
	          </execution>
	        </executions>
	      </plugin>		
